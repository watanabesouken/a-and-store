<div class="custom-brand  section-{{ section.id }}-margin">
  <div class="custom-brand__wrapper">
    <h2 class="custom-brand__title{% if section.settings.show_title %}--show{% endif %} ">{{ section.settings.brand__title }}</h2>

    {% if section.settings.link_url != blank %}<a href="{{ section.settings.link_url }}">{% endif %}
    <div class="custom-brand__bg-image custom-brand--{{ section.id }}">
        <div class="custom-brand__inner">
            <div class="custom-brand__logo">
                <img style="max-width: 100%; height:auto;" src="{{ section.settings.logo | img_url: '2000x2000' }}" alt="">
            </div>
        </div>
    </div>
    {% if section.settings.link_url != blank %}</a>{% endif %}
  </div>
</div>




{%- style -%}
  .section-{{ section.id }}-margin {
    padding-top: {{ section.settings.sp_margin_top }}px;
    padding-bottom: {{ section.settings.sp_margin_bottom }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-margin {
      padding-top: {{ section.settings.margin_top }}px;
      padding-bottom: {{ section.settings.margin_bottom }}px;
    }
  }

  .custom-brand__title{
    display:none;
  }
  .custom-brand__title--show{
    display:block;
    text-align:center;
    font-size: 14px;
  }

  @media screen and (min-width: 750px) {
    .custom-brand__title--show{
      font-size: 30px;
    }
  }


  .custom-brand__inner{
    max-width: 1520px;
    width: 90%;
    margin: 0 auto;
  }
  .custom-brand__logo{
    margin: 0 auto;
    width:{{ section.settings.logo_width }}px;
    height: 100%;
  }
  .custom-brand__logo img{
    width: 100%;
    vertical-align:bottom;
  }
  .custom-brand--{{ section.id }} {
    padding-top: {{ section.settings.padding }}px;
    padding-bottom: {{ section.settings.padding }}px;
  }
  .custom-brand--{{ section.id }}{
    background: url( {{ section.settings.image_picker | img_url: 'master'}}) center / cover no-repeat;
  }


  @media (max-width: 749px) {
    .custom-brand--{{ section.id }}   {
      padding-top: 70px;
      padding-bottom: 70px;
    }
  }
{%- endstyle -%}


{%- comment -%} blockなし {%- endcomment -%}
{% schema %}
{
    "name":"トップ ブランド画像バナー",
    "tag": "section",
    "settings":[
        {
          "type": "header",
          "content": "タイトル"
        },
        {
            "type": "checkbox",
            "id": "show_title",
            "label": "タイトルを表示する",
            "default": true
        },
        {
          "type": "text",
          "id": "brand__title",
          "label": "タイトルを入力",
          "default": "BRAND"
        },
        {
            "type": "image_picker",
            "id":"image_picker",
            "label":"背景画像"
        },
        {
            "type": "range",
            "id": "padding",
            "min": 100,
            "max": 600,
            "step": 10,
            "unit": "px",
            "label": "画像の高さ設定",
            "default": 400
        },
        {
            "type": "image_picker",
            "id": "logo",
            "label": "ロゴ画像を追加してください"
        },
        {
            "type": "range",
            "id": "logo_width",
            "min": 10,
            "max": 200,
            "step": 10,
            "unit": "px",
            "label": "ロゴの幅設定",
            "default": 50
        },
        {
            "type": "url",
            "id": "link_url",
            "label":"画像にリンク先を設定"
        },
        {
            "type": "header",
            "content": "余白の設定"
        },
        {
            "type": "range",
            "id": "margin_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "PCサイズ:上部の余白",
            "default": 36
        },
        {
            "type": "range",
            "id": "margin_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "PCサイズ:下部の余白",
            "default": 36
        },
        {
            "type": "range",
            "id": "sp_margin_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "スマホサイズ：上部の余白",
            "default": 36
        },
        {
            "type": "range",
            "id": "sp_margin_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "スマホサイズ：下部の余白",
            "default": 36
        }
    ],
    "presets": [
        {
			"name": "トップ ブランド画像バナー"
	    }
    ]
}

{% endschema %}