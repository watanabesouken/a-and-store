{% style %}

    .top_pages li {
        position: relative;     
      width: 100%;
    }
    .top_pages li a {
        text-decoration: none;
        color: #333;
    }
    .top_pages li i {
        display: block;
        overflow: hidden;
    }
    .top_pages img {
        border: none;
        max-width: 100%;
        height: auto;
        vertical-align: bottom;
      height: 261px;
      object-fit:cover;
      width: 100%;
    }
    .text-wrapper{
        position: absolute;
        bottom: 1em;
        right: 2em;
        font-size: 16px;
        font-weight: 500;
    top: 50%;
    -webkit-transform: translateY(-50%);
    -ms-transform: translateY(-50%);
    transform: translateY(-50%);
    left: 0;
    right: 0;
    margin: 0 auto;
    text-align: center;
    z-index: 100;
    max-width: 1120px;
}
    }
    .top_pages {
        max-width: 120rem;
        margin: 0 auto;
    }
    .top_pages li p {
        display: block;
        letter-spacing: 0.05em;
    }
    .image-overlay {
        position: absolute;
        top: 0;
        bottom: 0;
        height: 100%;
        left: 0;
        right: 0;
        z-index: 10;
    }
    .image-overlay {
        opacity: .15;
        background-color: #000;
    }
      .p-top-section-{{ section.id }}-padding2 {
    padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
    padding-left: {{ section.settings.padding_left | times: 0.5 | round: 0 }}px;
    padding-right: {{ section.settings.padding_right | times: 0.5 | round: 0 }}px;
  }
      .p-top-section-{{ section.id }}-maxwidth {  
        max-width: {{ section.settings.max-width}}px;
            margin: 0 auto;
  }

    .top_pages ul {
        display: flex;
         list-style:none;
         flex-direction: column;
        gap: 0.8rem 1rem;
    }
  @media screen and (min-width: 750px) {
         .top_pages ul {
        flex-direction: row;
       list-style:none;
       justify-content: space-between;
    }
      .top_pages li {
        position: relative;     
      width: 48%;
    }
    .p-top-section-{{ section.id }}-padding2 {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      padding-left: {{ section.settings.padding_left}}px;
      padding-right: {{ section.settings.padding_right}}px;
    }
          .p-top-section-{{ section.id }}-maxwidth {  
   max-width: {{ section.settings.max-width}}px;
                margin: 0 auto;
  }
  }
{%- endstyle -%}

<div class="top_pages" style="background-color: {{ section.settings.box_bkColor}}">
<div class="p-top-section-{{ section.id }}-maxwidth p-top-section-{{ section.id }}-padding2">
		<ul>
         {% if section.settings.image-link1 != blank %}
        <li class="animate is-arrival is-animated">
        <a href="{{ section.settings.button_link1 }}"><i><img src="{{ section.settings.image-link1 | img_url: 'master'  }}" alt=""></i><div class="text-wrapper"  style="color: {{ section.settings.text-color1}} "><h3 class="image-link-text" style="font-size: {{ section.settings.font_size-heading1}}px ">{{ section.settings.image-link__heading1 | escape }}</h3><p style="font-size: {{ section.settings.font_size-text1}}px ">{{ section.settings.image-link__text1 | escape }}</p></div>
        <div class="image-overlay"></div>
        </a>
      </li>
            {% endif %}
             {% if section.settings.image-link2 != blank %}
			<li class="animate is-arrival is-animated">
        <a  href="{{ section.settings.button_link2 }}"><i><img src="{{ section.settings.image-link2 | img_url: 'master'  }}" alt=""></i><div class="text-wrapper" style="color: {{ section.settings.text-color2}} "><h3 class="image-link-text" style="font-size: {{ section.settings.font_size-heading2}}px ">{{ section.settings.image-link__heading2 | escape }}</h3><p style="font-size: {{ section.settings.font_size-text2}}px ">{{ section.settings.image-link__text2 | escape }}</p></div>
        <div class="image-overlay"></div>
        </a>
      </li>
           {% endif %}
		</ul>
  
  </div>
</div>
 
